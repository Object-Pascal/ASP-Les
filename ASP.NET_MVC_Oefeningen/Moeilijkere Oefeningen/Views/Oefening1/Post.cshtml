@model Moeilijkere_Oefeningen.Models.OefeningModel

<h2>Post</h2>

<input type="button" id="btnPost" value="Send Post Ajax Request" />

<input id="txb_Username" value="@Model.Username" />
<input id="txb_Password" value="@Model.Password" />
<input id="txb_Email" value="@Model.Email" />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Password</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        <tr id="testRow">
            <td>@Model.Username</td>
            <td>@Model.Password</td>
            <td>@Model.Email</td>
        </tr>
    </tbody>
</table>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#btnPost").click(function () {
            $.ajax({
                type: "POST",
                url: "/Oefening1/AjaxPost",
                data: '',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    $("#testRow").html(response);
                },
                failure: function (response) {
                    alert("AjaxFailure");
                },
                error: function (response) {
                    alert("AjaxError");
                }
            });
        });
    });
</script>



